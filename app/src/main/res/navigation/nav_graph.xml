<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="ro.unibuc.cs.memeow.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_create_meme"
        android:name="ro.unibuc.cs.memeow.ui.TemplateListFragment"
        android:label="@string/create_meme"
        tools:layout="@layout/fragment_template_list">
        <action
            android:id="@+id/action_select_template"
            app:destination="@id/editTemplateFragment" />
    </fragment>
    <fragment
        android:id="@+id/editTemplateFragment"
        android:name="ro.unibuc.cs.memeow.ui.EditTemplateFragment"
        android:label="@string/edit_meme"
        tools:layout="@layout/fragment_edit_template">
        <action
            android:id="@+id/action_edit_to_viewMeme"
            app:destination="@id/viewMemeFragment"
            app:popUpTo="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/login_fragment"
        android:name="ro.unibuc.cs.memeow.ui.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/viewMemeFragment"
        android:name="ro.unibuc.cs.memeow.ui.ViewMemeFragment"
        android:label="@string/view_meme"
        tools:layout="@layout/fragment_view_meme">
        <argument
            android:name="memeObject"
            app:argType="ro.unibuc.cs.memeow.model.PostedMeme" />
    </fragment>
    <fragment
        android:id="@+id/nav_profile"
        android:name="ro.unibuc.cs.memeow.ui.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="profileUUID"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_view_last_meme"
            app:destination="@id/viewMemeFragment" />
    </fragment>
</navigation>